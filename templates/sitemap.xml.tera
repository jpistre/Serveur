<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    {% macro render(pages) %} {% for page in pages %}
    <url>
        <loc>{{ base_url }}/{{ page.uri }}</loc>
        <priority>{{ page.meta.priority }}</priority>
    </url>

    {% if page.children %}
        {{ self::render(pages=page.children) }}
    {% endif %}
    {% endfor %} {% endmacro render %}

    {{ self::render(pages=tree) }}
</urlset>
